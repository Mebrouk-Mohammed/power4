{{define "board_small"}}
<div class="board">
  <div class="board-inner"
       style="--rows: {{.Rows}}; --cols: {{.Cols}}; --imgW: 560px;
              --cell: 55px; --gap: 5px; --pad: 18px;
              --offx: 105px; --offy: 80px;">
    <img class="board-img" src="/static/img/easy_difficulty.png" alt="plateau easy">

    <form action="/play" method="post">
      <div class="controls">
        {{range $c := rangeN .Cols}}
          <button class="colbtn" name="col" value="{{$c}}" {{if ne $.Winner 0}}disabled{{end}}>â–¼</button>
        {{end}}
      </div>

      <div class="grid-abs">
        {{range $i, $row := .Board}}
          {{range $j, $cell := $row}}
            <button name="col" value="{{$j}}" type="submit"
                    style="all:unset;width:var(--cell);height:var(--cell);border-radius:50%;
                           display:block;position:relative;cursor:pointer;"
                    {{if ne $.Winner 0}}disabled{{end}}>
              {{if eq $cell 1}}
                {{template "token_p1" $}}
              {{else if eq $cell 2}}
                {{template "token_p2" $}}
              {{end}}
            </button>
          {{end}}
        {{end}}
      </div>
    </form>
  </div>
</div>
{{end}}
